@using ciklonalozi.Models

@if (Shown)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" style="display: block;" @onclick=Hide>
        <div class="modal-dialog" @onclick:stopPropagation>
            <form @onsubmit=SaveClicked>
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Novi nalog</h5>
                        <button type="button" class="btn-close" @onclick=Hide></button>
                    </div>
                    <div class="modal-body">
                        <TextBox For=@nameof(CreateOrderModel.ContactName) Label=Kontakt @bind-Value=Model.ContactName AutoFocus Errors=Errors
                            Required />
                        <TextBox For=@nameof(CreateOrderModel.ContactPhone) Label=Telefon @bind-Value=Model.ContactPhone Errors=Errors />
                        <TextBox For=@nameof(CreateOrderModel.Subject) Label=Predmet @bind-Value=Model.Subject Errors=Errors
                            Required />
                        <TextBox For=@nameof(CreateOrderModel.Note) Label=Napomena @bind-Value=Model.Note Lines=3 Errors=Errors />
                        <DateTimeBox For=@nameof(CreateOrderModel.ArrivalOrArrived) Label=Datum @bind-Value=Model.ArrivalOrArrived Errors=Errors
                            Required />
                        <CheckBox For=@nameof(CreateOrderModel.IsArrival) Label="Najava" @bind-Value=Model.IsArrival Errors=Errors />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-outline-danger" @onclick=Hide>Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}